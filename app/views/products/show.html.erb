<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<% if current_user.role == "admin" %>
  <%= link_to 'Edit', edit_product_path(@product), class: "btn-link" %> | 
  <%= link_to 'Back', products_path, class: "btn-link" %>
<% else %>
  <%= link_to 'Back', view_cart_path, class: "btn-link" %>
<% end %>
